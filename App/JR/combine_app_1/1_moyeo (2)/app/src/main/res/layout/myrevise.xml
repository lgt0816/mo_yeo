                                android:textSize="18dp"
                                android:text="재학"/>

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingRight="5dp"
                                android:text="졸업"
                                android:textSize="18dp"/>

                            <CheckBox
                                android:layout_width="wrap_content"
